{
  "name": "@phwebi/rollup-plugin-extensions",
  "version": "1.0.0",
  "description": "Allow rollup to resolve local files with any extension",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/types/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phwebi/rollup-plugin-extensions"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "rollup-plugin",
    "rollup",
    "extension",
    "extensions",
    "resolve"
  ],
  "author": "Gabe Meola <gabe@zelzen.io>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc -p . --emitDeclarationOnly",
    "prepublishOnly": "npm run build && npm run build:types"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "rollup": "^3.23.0",
    "rollup-typescript": "1.2.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "rollup": "^3.23.0"
  }
}
